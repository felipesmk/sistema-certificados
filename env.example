# Configurações do Flask
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=sua_chave_secreta_aqui_muito_longa_e_aleatoria

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///instance/certificados.db

# Configurações de Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_de_app
MAIL_DEFAULT_SENDER=seu_email@gmail.com

# Configurações de Autenticação
AUTH_MODE=banco  # 'banco' ou 'ldap'

# Configurações LDAP (se AUTH_MODE=ldap)
LDAP_SERVER=ldap://seu-servidor-ldap.com
LDAP_PORT=389
LDAP_BASE_DN=dc=exemplo,dc=com
LDAP_USER_DN=cn=admin,dc=exemplo,dc=com
LDAP_PASSWORD=sua_senha_ldap

# Configurações de Sessão
PERMANENT_SESSION_LIFETIME=3600  # 1 hora em segundos

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações do Scheduler
SCHEDULER_ENABLED=True
SCHEDULER_TIMEZONE=America/Sao_Paulo 